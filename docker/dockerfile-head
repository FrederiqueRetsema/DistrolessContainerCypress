FROM almalinux:latest AS build
RUN  yum upgrade -y &&\
     yum install -y httpd && \
     chown apache:apache /var/log/httpd && \
     sed -i 's/Listen 80/Listen 8080/' /etc/httpd/conf/httpd.conf && \
     sed -i 's/#ServerName www.example.com:80/ServerName www.example.com:8080/' /etc/httpd/conf/httpd.conf &&\
     echo "Hello Distroless" > /var/www/html/index.html && \
     grep apache /etc/passwd > /tmp/passwd_apache && \
     grep apache /etc/group  > /tmp/group_apache
