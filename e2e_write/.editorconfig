# Editorconfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_tailing_whitespace = true
insert_final_newline = true

[Makefile]
indent_style = tab

[*.md]
trim_tailing_whitespace = false

[*.html]
indent_size = 2

[*.{json,yaml,yml}]
indent_style = space
indent_size = 2